{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "build"],
  "include": ["**/*.ts", "**/*.tsx"]
}
